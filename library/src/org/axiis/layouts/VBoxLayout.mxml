<!---
	The VBoxLayout is a layout with a referenceRepeater that produces
	RegularRectangles for each item in its dataProvider. The RegularRectangles
	are sized and spaced evenly across the height of the layout. This
	behavior can be used to create bar chart-like visualizations.
-->
<core:BaseLayout xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:degrafa="http://www.degrafa.com/2007"
	xmlns:layouts="org.axiis.layouts.*"
	xmlns:core="org.axiis.core.*" xmlns:utils="org.axiis.layouts.utils.*">

	<!---
		The amount of whitespace that should be left between RegularRectangles
		as a percentage of the height of the VBoxLayout
	-->
	<mx:Number id="percentGap">0</mx:Number>
	
	<core:referenceRepeater>
		<utils:GeometryRepeater>
			<utils:geometry>
				<degrafa:RegularRectangle x="0" y="0" height="{height / itemCount - (height*percentGap/2)}" width="{width}"/>
			</utils:geometry>
			<utils:modifiers>
				<utils:PropertyModifier property="y" modifier="{height/itemCount}" modifierOperator="add"/>
			</utils:modifiers>
		</utils:GeometryRepeater>
	</core:referenceRepeater>
	
</core:BaseLayout>
